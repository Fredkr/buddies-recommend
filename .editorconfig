root = true
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
[*.js,*.jsx]
indent_style = space
indent_size = 4

# Indentation override for all JS under lib directory
[lib/**.js]
indent_style = space
indent_size = 2

[{package.json}]
indent_style = space
indent_size = 2
