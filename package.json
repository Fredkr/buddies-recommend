{
  "name": "buddies-recommend-site",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "config": {
    "serverscript": "./dist/server/server.js",
    "dist": "./dist",
    "scriptsrc": "./scripts",
    "sasssrc": "./scss",
    "cssoutput": "./public/css",
    "scriptsoutputpublic": "./public/scripts"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "browserify": "browserify $npm_package_config_scriptsrc/site.js -o $npm_package_config_scriptsoutputpublic/site.js -t [babelify]",
    "eslint": "eslint $npm_package_config_scriptsrc",
    "build:js": "npm run clean & npm run eslint && babel $npm_package_config_scriptsrc --out-dir $npm_package_config_dist",
    "build:scss": "node-sass $npm_package_config_sasssrc/site.scss | postcss --use autoprefixer -o $npm_package_config_cssoutput/site.css",
    "watch": "nodemon -e js,jsx,scss -w $npm_package_config_scriptsrc -w $npm_package_config_sasssrc -x 'npm run build:js && npm run build:scss && npm run start'",
    "postinstall": "mkdir -p $npm_package_config_scriptsoutputpublic -p $npm_package_config_cssoutput && npm run build:scss && npm run build:js",
    "start": "node $npm_package_config_serverscript"
  },
  "author": "Fredrik Källström",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^6.1.2",
    "babel-cli": "^6.3.14",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "eslint": "^1.10.3",
    "eslint-plugin-react": "^3.11.2",
    "express": "^4.13.3",
    "express-handlebars": "^2.0.1",
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1",
    "postcss-cli": "^2.3.2",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "reactify": "^1.1.1"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  },
  "engines": {
    "node": "4.1.1"
  }
}
